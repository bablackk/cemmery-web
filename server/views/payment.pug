                        input.input-info-ship(type='text' placeholder='Email' required=true value=`${user.email}` name='email')
                        input.input-info-ship(type='text' placeholder='Số điện thoại' required=true name='phoneNumber')
                        input.input-info-ship(type='text' placeholder='Địa chỉ' required=true name='address')
