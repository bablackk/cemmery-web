                            .price-ship
                                p.name-price Ph&iacute; v&#x1EAD;n chuy&#x1EC3;n
                                span.shipping-price
                            hr
                            .final-price
                                p.name-price T&#x1ED5;ng c&#x1ED9;ng
                                span.payment_final-price
                                input(style='display: none' type='text' name='totalMoney' class='input-totalMoney')
